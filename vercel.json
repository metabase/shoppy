{
  "version": 2,
  "buildCommand": "NODE_OPTIONS=\"--max-old-space-size=6144\" react-scripts build && cd api && tsc",
  "builds": [
    {
      "src": "api/dist/main.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["api/dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/dist/main.js"
    }
  ]
}
